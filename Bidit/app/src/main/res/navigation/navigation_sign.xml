<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_sign"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/joinFragment"
        android:name="com.alexk.bidit.presentation.ui.login.join.JoinFragment"
        android:label="JoinFragment"
        tools:layout="@layout/fragment_join">

        <argument
            android:name="argLogin"
            android:defaultValue="no_data"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.alexk.bidit.presentation.ui.login.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_joinFragment"
            app:destination="@id/joinFragment" />
    </fragment>
</navigation>